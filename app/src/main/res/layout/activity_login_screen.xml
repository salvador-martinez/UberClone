<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.martinez.salvador.uberclone.LoginScreenActivity">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UberClone"
                android:id="@+id/textView" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" android:textSize="50sp"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Ride"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/PassDriver"
                android:layout_toStartOf="@+id/PassDriver"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/PassDriver"
                android:gravity="center" android:textSize="20sp"/>
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PassDriver" android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" android:checked="false"
                android:layout_marginTop="50dp"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Drive"
                android:id="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_toEndOf="@+id/PassDriver"
                android:layout_alignTop="@+id/PassDriver"
                android:layout_alignBottom="@+id/PassDriver"
                android:textSize="20sp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO!"
                android:id="@+id/button"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/PassDriver"
                android:layout_centerHorizontal="true" android:onClick="onClick"/>
</RelativeLayout>
